@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron center-jumbotron">
        <h1>Compress your files</h1>
        <p class="lead">
            Compress one file at the time in our website, with just one click!
        </p>
        <p>We make the reverse operation too!</p>
        <p><a href="http://asp.net" class="btn btn-primary btn-lg">Know the algorithm &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h2>Give us away a file..</h2>
        @using (Html.BeginForm("FileHandler", "File", FormMethod.Post, new { @class = "", enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <label>The file goes right here:</label>
                <input type="file" name="originalFile" id="originalFile" value="" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" name="submit" value="Up Load File!" class="btn btn-primary btn-success form-control" />
            </div>
        }
    </div>
</div>